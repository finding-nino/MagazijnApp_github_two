<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagazijnApp.Views.LoginPage">

    <ScrollView>
        <VerticalStackLayout BackgroundColor="#004A4F"
            Padding="30,0"
            Spacing="25">
            <Image
                Source="inventory_management.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="inventory management image" />

            <Label
                Text="Welcome to your login"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>



