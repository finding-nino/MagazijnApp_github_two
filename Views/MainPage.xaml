<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagazijnApp.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout BackgroundColor="#004A4F"
            Padding="30,0"
            Spacing="25">
            
            <Image
                Source="inventory_management.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="inventory management image" />

            <Label
                Text="Welcome to your Inventory Management System"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="InventoryBtn"
                Text="Add Products"
                TextColor="White"
                WidthRequest="200"
                HeightRequest="50"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                BackgroundColor="#E46E56"
                Clicked="OnInventoryClicked"/>
            <Button
                x:Name="ProductsBtn"
                Text="Go to Products"
                TextColor="White"
                WidthRequest="200"
                BackgroundColor="#E46E56"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnProductsClicked"></Button>
            <Button
                x:Name="LoginBtn"
                Text="Go to Login"
                WidthRequest="200"
                Clicked="OnLoginClicked"></Button>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>



