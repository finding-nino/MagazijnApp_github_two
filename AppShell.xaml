<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MagazijnApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MagazijnApp.Views"
    NavBarHasShadow="False"
    BackgroundColor="#c95843"
    Title="MagazijnApp">


        <Shell.TitleView>
    <Grid>
        <Label Text="Magazijn App" 
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="White"
               FontSize="18"/>
    </Grid>
</Shell.TitleView>
            
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
